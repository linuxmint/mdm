#!/usr/bin/python3

""" Launch the MDM "Login Window" configuration utility
"""

import os
import gettext

gettext.install('mdm', '/usr/share/locale')

tool = '/usr/sbin/mdmsetup'
prompt = _('Please enter your password to run the Login Window settings tool')
icon = 'mdmsetup'

if os.path.exists('/usr/bin/pkexec'):
    launcher = 'pkexec'
elif os.path.exists('/usr/bin/gksu'):
    launcher = 'gksu  --message "<b>{0}</b>"'.format(prompt)
elif os.path.exists('/usr/bin/kdesudo'):
    launcher = 'kdesudo -i {0} -d --comment "<b>{1}</b>"'.format(
                 icon, prompt)

command = '{0} {1}'.format(launcher, tool)
os.system(command)

